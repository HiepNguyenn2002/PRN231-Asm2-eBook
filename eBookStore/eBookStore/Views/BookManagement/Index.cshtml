@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model eBookStore.Models.Book
@{
    var pubList = ViewData["pubID"] as SelectList;
}

<style>
    /* Custom CSS for table */
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f2f2f2;
        }

        /* Hover effect */
        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

</style>
<div class="row">
    <div class="col-md-4">
        <div class="login-form">
            <h2>Add Book</h2>
            <form action="@Url.Action("AddNewBook", "BookManagement")" method="post">
                <div class="form-group">
                    <label for="Bookname">Book Name</label>
                    <input type="text" class="form-control" id="name" name="name" />
                   
                </div>
                <div class="form-group">
                    <label for="Author">Publisher</label>
                    <select style="border: 1px solid #dee2e6;" name="Publisher" class="form-control" id="Publisher" asp-for="PubId" asp-items="pubList">
                        <option>Không có</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="text" class="form-control" id="Price" name="Price" />
                </div>
                <div class="form-group">
                    <label for="Type">Type</label>
                    <input type="text" class="form-control" id="Type" name="Type" />
                </div>
                <div class="form-group">
                    <label for="PublisherDate">PublisherDate</label>
                    <input type="date" class="form-control" id="pubDate" name="pubDate" />
                </div>
                
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-danger">Clear</button>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Book Management</h2>
        <div class="table-responsive ">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th width="5%">BookID</th>
                        <th width="25%">Book Name</th>
                        <th width="20%">Publisher</th>
                        <th width="20%">Price</th>
                        <th width="20%">Type</th>
                        <th width="10%">Action</th>
                    </tr>
                </thead>
                <thead>
                    <tr>
                        <th><input placeholder="search" style="border-radius:5px "/></th>
                        <th><input placeholder="search" style="border-radius:5px " /></th>
                        <th><input placeholder="search" style="border-radius:5px " /></th>
                        <th><input placeholder="search" style="border-radius:5px " /></th>
                        <th><input placeholder="search" style="border-radius:5px " /></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewData["book"] != null)
                    {
                        var books = ViewData["book"] as List<Book>;
                        foreach (var b in books)
                        {
                            <tr>
                                <td>@b.BookId</td>
                                <td>@b.BookName</td>
                                <td>@b.PubName</td>
                                <td>@b.Price</td>
                                <td>@b.Type</td>
                                <td>
                                    <a href="/BookManagement/DeleteBook/@b.BookId">Delete |</a>
                                    <a href="#">Edit</a>
                                </td>
                            </tr>
                        }
                    }
                   
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
