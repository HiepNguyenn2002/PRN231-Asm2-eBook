@model eBookStore.Models.User



@{
    ViewBag.Title = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6 left-column"></div>
    <div class="col-md-6">
        <div class="login-form">
            <h2>Register</h2>
            <form action="@Url.Action("Register", "Register")" method="post">
                <div class="form-group">
                    <label for="Username">Email</label>
                    <input type="text" class="form-control" id="email" name="email" />
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.EmailAddress)</span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" />
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
                </div>
                <div class="form-group">
                    <label for="Password">Confirm Password</label>
                    <input type="password" class="form-control" id="cfPassword" name="cfPassword" />
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
                </div>
                <button type="button" onclick="login()" class="btn btn-secondary">Login</button>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
<script src="~/js/login.js"></script>




