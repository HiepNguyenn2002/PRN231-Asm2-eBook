@model eBookStore.Models.User
@{
    ViewBag.Title = "Login";
}



@{
    ViewBag.Title = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 left-column"></div>
    <div class="col-md-6">
        <div class="login-form">
            <h2>Login</h2>
            <form action="@Url.Action("Login", "Login")" method="post">
                <div class="form-group">
                    <label for="Username">Email</label>
                    <input type="text" class="form-control" id="emailLogin" name="email" />
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.EmailAddress)</span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" id="passwordLogin" name="password"  />
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
                </div>
              
                <button type="submit"  class="btn btn-primary">Login</button>
                <button type="button" onclick="register()" class="btn btn-secondary">Register</button>
            </form>
        </div>
    </div>
</div>
<script src="~/js/login.js"></script>




